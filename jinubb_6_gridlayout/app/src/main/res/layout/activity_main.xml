<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="5"
    android:rowCount="9"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/edit_num1"
        android:hint="숫자 1 입력"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="5"/>


    <EditText
        android:id="@+id/edit_num2"
        android:hint="숫자 2 입력"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/btn_num0"
        android:text="0"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="2"/>
    <Button
        android:id="@+id/btn_num1"
        android:text="1"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="2"/>
    <Button
        android:id="@+id/btn_num2"
        android:text="2"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="2"
        android:layout_row="2"/>
    <Button
        android:id="@+id/btn_num3"
        android:text="3"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="3"
        android:layout_row="2"/>
    <Button
        android:id="@+id/btn_num4"
        android:text="4"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="4"
        android:layout_row="2"/>
    <Button
        android:id="@+id/btn_num5"
        android:text="5"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="3"/>
    <Button
        android:id="@+id/btn_num6"
        android:text="6"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="3"/>
    <Button
        android:id="@+id/btn_num7"
        android:text="7"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="2"
        android:layout_row="3"/>
    <Button
        android:id="@+id/btn_num8"
        android:text="8"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="3"
        android:layout_row="3"/>
    <Button
        android:id="@+id/btn_num9"
        android:text="9"
        android:layout_width="216px"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="center"
        android:layout_column="4"
        android:layout_row="3"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_margin="5dp"
        android:text="더하기"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/btn_sub"
        android:layout_margin="5dp"
        android:text="빼기"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/btn_mul"
        android:layout_margin="5dp"
        android:text="곱하기"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/btn_div"
        android:layout_margin="5dp"
        android:text="나누기"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="7"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:id="@+id/text_result"
        android:layout_margin="5dp"
        android:text="계산 결과 : "
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:layout_column="0"
        android:layout_row="8"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"/>

</GridLayout>